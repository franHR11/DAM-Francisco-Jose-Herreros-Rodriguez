{
  "name": "riper5-extension",
  "displayName": "RIPER5 Mode Selector",
  "description": "Selecciona modos RIPER5 y activa/desactiva modo memoria desde la barra de estado",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "riper5.selectMode",
        "title": "RIPER5: Seleccionar Modos"
      },
      {
        "command": "riper5.toggleMemory",
        "title": "RIPER5: Activar/Desactivar Modo Memoria"
      },
      {
        "command": "riper5.modesChanged",
        "title": "RIPER5: Actualizaci√≥n de Modos"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
} 